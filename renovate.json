{
  "timezone": "Asia/Jakarta",
  "schedule": ["every weekend"],
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchPackagePatterns": ["^@mantine"],
      "groupName": "mantine packages",
      "groupSlug": "mantine"
    },
    {
      "matchPackagePatterns": ["^@tiptap"],
      "groupName": "tiptap packages",
      "groupSlug": "tiptapZ"
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch", "digest"],
      "excludePackagePatterns": ["^@mantine"],
      "groupName": "all other dependencies",
      "groupSlug": "all-others"
    }
  ]
}
